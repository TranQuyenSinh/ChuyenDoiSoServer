@model ChuyenDoiSoServer.Admin.TinTuc.RequestModels.DeleteTinTuc

@{
    ViewData["Title"] = ViewData["NavbarTitle"] = "Xóa tin tức";
    ViewData["ActiveTab"] = "TinTuc";
}


<div class="row">
    <div class="col-lg-auto text-center col-md-12">
        <img class="img-fluid img-thumbnail" style="max-width: 250px;" src="@Model.Hinhanh" alt="">
    </div>
    <div class="col-lg-auto col-md-12">
        <h3>Xác nhận xóa tin này này?</h3>
        <h4 class="fw-bold text-danger">"@Model.Tieude"</h4>
        <p>Tác giả: @Model.Tacgia</p>
        @* <a asp-area="ViewStory" asp-controller="ViewStory" asp-action="DetailStory" asp-route-storySlug="@Model.StorySlug" target="_blank">Link</a> *@
        <hr />
        <form asp-route="DeleteTinTuc">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <a class="btn btn-secondary" asp-action="Index">
                Quay lại
            </a>
            <input type="submit" value="Xác nhận" class="btn btn-danger" />
        </form>
    </div>
</div>
