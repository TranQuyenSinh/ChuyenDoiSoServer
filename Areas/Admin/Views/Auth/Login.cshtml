@model ChuyenDoiSoServer.Admin.Auth.RequestModels.LoginModel

@{
    Layout = "";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChuyenDoiSoServer</title>

    @* Bootstrap 5.1 *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* Font awesome *@
    <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    @* My CSS *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.min.css" asp-append-version="true" />
</head>

<body>

    <div class="login-container">
        <div class="background" style="background-image: url('/images/login_bg.jpg')" alt=""></div>
        <div class="d-flex align-items-center justify-content-center">
            <div class="login-content">
                <form class="login-form" asp-action="Login" method="POST">
                    @Html.AntiForgeryToken()
                    <h2>Đăng nhập</h2>
                    <div class="custom-input-container mt-3">
                        <i class="fas fa-user"></i>
                        <input value="qt391997@gmail.com" type="text" asp-for="Email" placeholder="Email" class="form-control">
                    </div>
                    <div class="custom-input-container mt-3">
                        <i class="fas fa-lock"></i>
                        <input value="Anhzer020" type="password" asp-for="Password" placeholder="Mật khẩu" class="form-control">
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <button type="submit" class="btn btn-primary w-50 ">Đăng nhập</button>
                </form>
                <img src="~/images/login_thumb.png" class="login-thumb" />
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* @await RenderSectionAsync("Scripts", required: false) *@
</body>

</html>
